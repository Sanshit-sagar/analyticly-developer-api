{
  "compilerOptions": {
    
    "target": "ES6",   
    "outDir": "./build/",                        
    "module": "commonjs",    
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,                           
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,                                          
    "skipLibCheck": true                               
  }
}

