{
  "compilerOptions": {
    "target": "ES6",   
    "outDir": "./build/",                        
    "module": "commonjs",    
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,                             
    "forceConsistentCasingInFileNames": true,                                          
    "esModuleInterop": true,
    "resolveJsonModule": false                       
  }
}

